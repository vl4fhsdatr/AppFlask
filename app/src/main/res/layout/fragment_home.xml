<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="io.github.vl4fhsdatr.appflask.ui.home.HomeFragment">

    <android.support.design.widget.TabLayout
        android:background="@color/colorPrimary"
        android:id="@+id/tabs_home"
        app:elevation="@dimen/app_bar_elevation"
        app:tabTextColor="@color/colorTextTabNormal"
        app:tabSelectedTextColor="@color/colorTextTabSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_home"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/tabs_home"/>

</RelativeLayout>
