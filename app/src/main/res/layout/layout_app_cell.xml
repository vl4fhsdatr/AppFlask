<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/app_cell_width"
    android:layout_height="@dimen/app_cell_height"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/image_app_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:src="@null"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/image_app_checked"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_checked"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/image_app_disabled"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitXY"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_disabled"
        />

    <TextView
        android:id="@+id/text_app_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_app_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="6dp"
        android:text="@null"
        android:singleLine="true"
        android:textSize="12sp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>